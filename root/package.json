{
  "name": "@maas-ui/maas-ui-root",
  "version": "3.3.0",
  "description": "SingleSPA app which registers maas-ui-legacy and maas-ui apps.",
  "main": "src/root-application.js",
  "scripts": {
    "start": "GIT_SHA=`git rev-parse --short HEAD` webpack serve --config webpack.dev.js",
    "serve": "yarn start",
    "build": "GIT_SHA=`git rev-parse --short HEAD` webpack --config webpack.prod.js --progress",
    "clean": "rm -rf dist node_modules",
    "lint": "yarn lint-package-json && yarn lint-js",
    "lint-js": "eslint src",
    "lint-package-json": "npmPkgJsonLint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/canonical-web-and-design/maas-ui.git"
  },
  "author": "Canonical Webteam",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/canonical-web-and-design/maas-ui.git"
  },
  "npmpackagejsonlint": {
    "rules": {
      "prefer-absolute-version-dependencies": "error",
      "prefer-absolute-version-devDependencies": "error",
      "prefer-alphabetical-dependencies": "error",
      "prefer-alphabetical-devDependencies": "error"
    }
  },
  "devDependencies": {
    "autoprefixer": "10.4.7",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.5",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "10.2.4",
    "css-loader": "6.7.1",
    "css-minimizer-webpack-plugin": "3.4.1",
    "dotenv-flow-webpack": "1.1.0",
    "eslint": "7.32.0",
    "html-webpack-plugin": "5.5.0",
    "mini-css-extract-plugin": "2.6.0",
    "npm-package-json-lint": "6.3.0",
    "postcss": "8.4.13",
    "postcss-loader": "6.2.1",
    "process": "0.11.10",
    "sass": "1.51.0",
    "sass-loader": "12.6.0",
    "webpack": "5.72.1",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.9.0",
    "webpack-merge": "5.8.0"
  },
  "dependencies": {
    "@maas-ui/maas-ui": "3.3.0",
    "@maas-ui/maas-ui-legacy": "3.3.0",
    "@maas-ui/maas-ui-shared": "3.3.0",
    "single-spa": "5.9.3",
    "vanilla-framework": "3.3.0"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
